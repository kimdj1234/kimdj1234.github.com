---
layout: null
title : Atom Feed
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.name }}</title>
  <id>{{ site.production_url }}</id>

  <link href="{{ site.production_url }}" />
  <link href="{{ site.production_url }}/atom.xml" rel="self" />

  <updated>{{ site.time | date_to_xmlschema }}</updated>

  <rights>Copyright 2014, {{ site.author.name }}</rights>

  <author>
    <name>{{ site.author.name }}</name>
  </author>

  {% for post in site.posts limit:10 %}
    <entry>
      <title>{{ post.title | xml_escape }}</title>
      <link href="{{ site.production_url }}{{ post.url }}" />
      <summary type="html">{{ post.content | xml_escape }}</summary>
      <id>{{ site.url }}{{ post.url }}</id>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <author>
        <name>{{ site.author.name }}</name>
      </author>
    </entry>
  {% endfor %}

  {% if site.categories.portfolio %}
    {% for post in site.categories.portfolio limit:4 %}
      <entry>
        <title>{{ post.title | xml_escape }}</title>
        <link href="{{ site.production_url }}{{ post.url }}" />
        <summary type="html">{{ post.content | xml_escape }}</summary>
        <id>{{ site.url }}{{ post.url }}</id>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <author>
          <name>{{ site.author.name }}</name>
        </author>
      </entry>
    {% endfor %}
  {% endif %}

</feed>
